/***
Prettyify
***/
/*{{{*/
body {
	font-size: 0.92em;
	margin-bottom: 4em;
}

.tiddler .viewer {
	font-size: 1.1em;
}

.downloadButton {
	display: inline-block;
	padding: 0.5em 1em;
	border-radius: .5em;
	border: none;
	text-align: center;
	font-size: 1.3em;
	font-weight: bold;
	color: [[ColorPalette::Background]];
	background-color: [[ColorPalette::QuaternaryMid]];
}
.downloadButton:hover {
	color: [[ColorPalette::QuaternaryMid]];
	background-color: [[ColorPalette::Background]];
	box-shadow: 0 0 0 1px [[ColorPalette::QuaternaryMid]];
}
.downloadButton:active {
	transform: scale(.95);
}
.downloadButton:focus {
	outline: none;
	box-shadow: 0 0 0 1px [[ColorPalette::QuaternaryDark]];
}

/*}}}*/